mixin videoPlayer(video = {})
    .videoPlayer#jsVideoPlayer
        video#jsVideoContent(src=video.src)
        .videoPlayer__controls
            .videoPlayer__column
                span#jsVolumeBtn
                    i.fas.fa-volume-up
                input.videoPlayer__volume.hidden#jsVolume(type="range", min="0" max="1" value="0.5" step="0.1")    
            .videoPlayer__column        
                span#jsPlayButton
                    i.fas.fa-play
            .videoPlayer__column
                input.videoPlayer__playRange#jsPlayRange(type="range" min="0" step="0.1" value="0")
            .videoPlayer__column
                span
                    span#currentTime 00:00:00
                    span  / 
                    span#totalTime 
                span#jsFullScreen
                    i.fas.fa-expand